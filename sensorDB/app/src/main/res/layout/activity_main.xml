<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/refresh_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="257dp"
        android:layout_marginStart="257dp"
        android:layout_marginTop="126dp"
        android:text="Refresh" />

    <TextView
        android:id="@+id/outputValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/refresh_id"
        android:layout_alignBottom="@+id/refresh_id"
        android:layout_centerHorizontal="true"
        android:text="Value" />

    <TextView
        android:id="@+id/outputName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/outputValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:text="Slider" />

    <EditText
        android:id="@+id/sensorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refresh_id"
        android:layout_marginTop="48dp"
        android:layout_toEndOf="@+id/outputName"
        android:layout_toRightOf="@+id/outputName"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name of Sensor" />

    <EditText
        android:id="@+id/valueInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sensorname"
        android:layout_toEndOf="@+id/sensorname"
        android:layout_toRightOf="@+id/sensorname"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/sendData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="Send input"
        android:layout_below="@+id/sensorname"
        android:layout_centerHorizontal="true" />


</RelativeLayout>